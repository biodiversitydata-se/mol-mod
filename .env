# PostgreSQL variables
POSTGRES_DB=asv-postgrest
POSTGRES_USER=asv
POSTGRES_HOST=asv-db
POSTGRES_PORT=5432
# Create subfolder pgdata (to hold db config and data files)
# to avoid bind mount-related permission errors on /var/lib/postgresql/data
# - see docker-compose.yml
PGDATA=/var/lib/postgresql/data/pgdata


# PostgREST variables
PGRST_DB_SCHEMA=api
PGRST_DB_ANON_ROLE=anon
PGRST_SERVER_PROXY_URI=http://127.0.0.1:3000

# Flask variables
POSTGREST_HOST=http://postgrest:3000

# BLAST variables
BLAST_DB=asvdb

# CAS variables
CAS_SERVER=https://auth.bioatlas.se
# # Test
# CAS_SERVER=https://casserver.herokuapp.com/
# CAS_AFTER_LOGIN is only used if '.../login' is typed into address field
# Otherwise, user is directed back to requested page after successful login
CAS_AFTER_LOGIN=main_bp.index
CAS_AFTER_LOGOUT=http://localhost:5000
# # Test
# CAS_AFTER_LOGOUT=https://www.google.com/

# File upload variables
# MAX_CONTENT_LENGTH=1024
UPLOAD_PATH=uploads
UPLOAD_ROLE=ROLE_COLLECTION_ADMIN
