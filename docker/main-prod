FROM python:3.10-bullseye

RUN mkdir -p /app
RUN mkdir -p /app/molmod
RUN mkdir -p /app/log
RUN mkdir -p /app/data-volumes/uploads
RUN mkdir -p /app/data-volumes/exports
RUN mkdir -p /app/data-volumes/fasta-exports

COPY molmod/ /app/molmod/
COPY log/ /app/log/
COPY wsgi.py /app/
COPY config/uwsgi-config.ini /app/
RUN chown -R www-data:www-data /app/

WORKDIR /app

RUN pip3 install -r molmod/requirements.txt
RUN pip3 install uwsgi

ENV RUN_ENV="production"
CMD ["uwsgi", "--ini", "uwsgi-config.ini", "--uid", "www-data"]
